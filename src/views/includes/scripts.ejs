<script type="text/javascript">

(function($){

    let s_path = "<%= path %>"

    $("a[href='" + s_path + "']").addClass("mm-active")

 })(jQuery);

function deleteProduto(s_entityId) {

    if ( confirm("Deseja apagar o produto id" + s_entityId + "?") ) {

        $.ajax({

            url: "/stock/" + s_entityId,
            type: "DELETE"

        }).done(function(data) {

            alert("Produto excluído com sucesso")
            window.location.reload()

        }).fail(function(error) {

            alert("Houve algum erro ao apagar esse produto. Por favor, tente novamente mais tarde.")

        })

    }

}

