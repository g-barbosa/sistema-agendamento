<!doctype html>
<html lang="en">
    <%- include('includes/head'); %>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <%- include('includes/header'); %>
        <%- include('includes/ui-theme-settings'); %>
            <div class="app-main">
                <%- include('includes/sidebar'); %>
                <div class="app-main__outer">
                    <div class="app-main__inner">
                        <div class="app-page-title">
                            <div class="page-title-wrapper">
                                <div class="page-title-heading">
                                    <div class="page-title-icon">
                                        <i class="pe-7s-display2 icon-gradient bg-mean-fruit">
                                        </i>
                                    </div>
                                    <div>PRODUTOS
                                        <div class="page-title-subheading">Aqui você poderá visualizar, editar e efetuar a exclusão de um ou vários produtos.
                                        </div>
                                    </div>
                                </div>
                                <div class="page-title-actions">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">

                                <div class="main-card mb-3 card">

                                    <div class="card-header">
                                        <i class="header-icon lnr-laptop-phone icon-gradient bg-plum-plate"> </i>
                                        Produtos
                                    </div>

                                    <div class="card-body p-0">
                                        <table class="mb-0 table table-striped table-borderless">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">#</th>
                                                    <th>Nome</th>
                                                    <th>Preço</th>
                                                    <th>Estoque</th>
                                                    <th>Ações</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% produtos.forEach(function(data) { %>
                                                <tr>
                                                    <th scope="row" class="text-center"><%= data.id %></th>
                                                    <td><%= data.description %></td>
                                                    <td>R$ <%= data.value %></td>
                                                    <td><%= data.quantity %></td>
                                                    <td class="text-nowrap">
                                                        <a href="/editar_produto/<%= data.entityId %>" class="btn-icon btn-icon-only btn btn-link"><i class="pe-7s-note btn-icon-wrapper"></i></a>
                                                        <a href="javascript:deleteProduto('<%= data.entityId %>')" class="btn-icon btn-icon-only btn btn-link"><i class="pe-7s-trash btn-icon-wrapper"></i></a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="d-block text-right card-footer">
                                        &nbsp;
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

    <%- include('includes/scripts', {path: request.path}); %>

</body>

</html>
