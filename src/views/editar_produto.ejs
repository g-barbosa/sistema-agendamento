<!doctype html>
<html lang="en">
    <%- include('includes/head'); %>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <%- include('includes/header'); %>
        <%- include('includes/ui-theme-settings'); %>
            <div class="app-main">
                <%- include('includes/sidebar'); %>
                <div class="app-main__outer">
                    <div class="app-main__inner">
                        <div class="app-page-title">
                            <div class="page-title-wrapper">
                                <div class="page-title-heading">
                                    <div class="page-title-icon">
                                        <i class="pe-7s-display2 icon-gradient bg-mean-fruit">
                                        </i>
                                    </div>
                                    <div>Editar Produto
                                        <div class="page-title-subheading">Efetuando a edição do produto...
                                        </div>
                                    </div>
                                </div>
                                <div class="page-title-actions"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">

                                <div class="main-card mb-3 card">
                                    <div class="card-body"><h5 class="card-title">Editar Produto</h5>
                                        <form method="POST" action="/stock/<%= produto.entityId %>">
                                            <div class="position-relative form-group">
                                                <label for="description">Nome</label>
                                                <input name="description" id="description" placeholder="Nome do Produto" type="text" class="form-control" value="<%= produto.description %>" required>
                                            </div>
                                            <!--<div class="position-relative form-group">
                                                <label for="descricao">Descrição</label>
                                                <textarea name="descricao" id="descricao" class="form-control"></textarea>
                                            </div>-->
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <label for="value">Preço</label>
                                                        <input name="value" id="value" placeholder="Preço" type="number" class="form-control" value="<%= produto.value %>" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="position-relative form-group">
                                                        <label for="quantity">Estoque</label>
                                                        <input name="quantity" id="quantity" placeholder="Estoque" type="number" class="form-control" value="<%= produto.quantity %>" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <button class="mt-2 btn btn-primary" type="submit">Editar</button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <%- include('includes/scripts', {path: request.path}); %>
</body>

</html>
